{% extends 'base.html.twig' %}

{% block title %}Coche index{% endblock %}

{% block body %}
    <h1>Coche index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coche in coches %}
            <tr>
                <td>{{ coche.id }}</td>
                <td>{{ coche.marca }}</td>
                <td>{{ coche.modelo }}</td>
                <td>{{ coche.color }}</td>
                <td>
                    <a href="{{ path('coche_show', {'id': coche.id}) }}">show</a>
                    <a href="{{ path('coche_edit', {'id': coche.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('coche_new') }}">Create new</a>
{% endblock %}
